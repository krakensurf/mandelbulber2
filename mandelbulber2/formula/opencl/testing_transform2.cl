		}
		}
		else
	{
			if(theta > pi0p25) spin = !spin;
			 else if(theta < -pi0p25) spin = !spin;
		}
	}*/

	// DE tweak
	if (fractal->analyticDE.enabledFalse)
		aux->DE = mad(aux->DE, fractal->analyticDE.scale1, fractal->analyticDE.offset0);
	return z;
}